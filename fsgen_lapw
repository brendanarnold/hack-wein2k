#!/bin/csh -f
#fsgen_lapw plots fermis surfaces for data in fort.11 to fort.xx and saves
#then in  save_filename_ii.plot.ps
#requires plotgenc (can be obtained directly from P.Blaha (and pgplot software)
#
#  fsgen_lapw  11   xx   save_filename
if( $#argv != 3) then
echo ' '
echo 'fsgen_lapw plots fermis surfaces for data in fort.x0 to fort.x1 (11-xx)'
echo 'generated by spagh2rho. It saves the plots in save_filename_ii.plot.ps'
echo '(requires plotgenc (can be obtained from P.Blaha) and pgplot software)'
echo ' '    
echo 'You must call me with: fsgen_lapw  x0   x1   save_filename'
  exit 9
endif

set ii=$1

top:
cp fort.$ii fort.rho
plotgenc << EOF
fort
2
3
-2 .000001  2.
3

0

EOF
cp fort.plot $3_$ii.plot.ps
gv fort.plot
@ ii ++
if($ii > $2) exit 0
goto top

